<%= link_to("<< Back to list", {:action => 'index'}, :class => 'back-link') %>

<div class="food_items new">
  <h2>Update Food Item</h2>

  <%= form_for(@foodItem, :url => {:action => 'update', :id => @foodItem.id }) do |f| %>

  <table summary="Food Item form fields">
    <tr>
      <th>Name</th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Category</th>
      <td><%= f.collection_select(:category_id, Category.all, :id, :name, { :prompt => 'Select a Category', :selected => @foodItem.category_id }, { class: 'form-control' }) %>
      </td>
    </tr>
  </table>

  <div class="form-buttons">
    <%= submit_tag("Update Food Item") %>
  </div>

  <% end %>

</div>



