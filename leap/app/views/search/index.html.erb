<script type="text/javascript">
	function searchRecipe() {
		$.ajax({

            url: '/search/show',
            cached: 'false',
            timeout: 50000,
            success: function(html) {
            	$("#recipe").html(html);
            },
            error: function(data) {
            	console.log("An error has occured.\n" + data);
            }
        });
	}
</script>

<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "/javascripts/jquery/jquery.min.js" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <title>Leap</title>
  <h1>Welcome to LEAP</h1>
  <h2>Here is a short demo of the search/crawling/scraping</h2>
  <label for="search">Search for a recipe</label>
  <input id="search" type="text"></input>
  <button onclick="searchRecipe()">Search</button>

  <div id="recipe"></div>

</body>